{
  "name": "@gwendall/share-menu",
  "version": "1.0.7",
  "description": "A beautiful share menu component with social media integrations",
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./content": {
      "types": "./dist/content.d.ts",
      "import": "./dist/content.mjs",
      "require": "./dist/content.js"
    },
    "./drawer": {
      "types": "./dist/drawer.d.ts",
      "import": "./dist/drawer.mjs",
      "require": "./dist/drawer.js"
    },
    "./headless": {
      "types": "./dist/headless.d.ts",
      "import": "./dist/headless.mjs",
      "require": "./dist/headless.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepack": "npm run clean && npm run build",
    "prepublishOnly": "npm run clean && npm run build",
    "publish-patch": "npm version patch && dotenv -e .env.local -- npm publish",
    "publish-minor": "npm version minor && dotenv -e .env.local -- npm publish",
    "publish-major": "npm version major && dotenv -e .env.local -- npm publish",
    "release": "dotenv -e .env.local -- npm publish",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gwendall/share-menu.git"
  },
  "keywords": [
    "share",
    "menu",
    "social",
    "react",
    "drawer",
    "vaul",
    "tailwind"
  ],
  "author": "Gwendall Esnault",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "lucide-react": "^0.400.0",
    "react-icons": "^5.0.0",
    "tailwind-merge": "^2.2.0",
    "vaul": "^1.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "dotenv-cli": "^8.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ]
}
